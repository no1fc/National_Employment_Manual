  "components": {
    "button": {
      "primary": {
        "type": "filled",
        "backgroundColor": "#FFE508",
        "color": "#000000",
        "padding": "12px 20px",
        "borderRadius": "4px",
        "fontWeight": "700",
        "fontSize": "14px",
        "border": "none",
        "cursor": "pointer",
        "transition": "0.2s ease",
        "states": {
          "default": {
            "backgroundColor": "#FFE508",
            "color": "#000000"
          },
          "hover": {
            "backgroundColor": "#E6D400",
            "filter": "brightness(0.9)"
          },
          "active": {
            "backgroundColor": "#CCC000",
            "boxShadow": "0 4px 12px rgba(0, 0, 0, 0.4)"
          },
          "disabled": {
            "backgroundColor": "#999999",
            "color": "#CCCCCC",
            "cursor": "not-allowed",
            "opacity": 0.6
          }
        }
      },
      "secondary": {
        "type": "filled",
        "backgroundColor": "#3C3C3C",
        "color": "#F5F5F5",
        "padding": "10px 16px",
        "borderRadius": "4px",
        "fontSize": "13px",
        "border": "none",
        "cursor": "pointer",
        "transition": "0.2s ease",
        "states": {
          "default": {
            "backgroundColor": "#3C3C3C"
          },
          "hover": {
            "backgroundColor": "#646464"
          },
          "active": {
            "backgroundColor": "#525252"
          }
        }
      },
      "outline": {
        "type": "outlined",
        "backgroundColor": "transparent",
        "color": "#F5F5F5",
        "border": "1px solid #646464",
        "padding": "10px 16px",
        "borderRadius": "4px"
      }
    },
    "link": {
      "default": {
        "color": "#F5F5F5",
        "textDecoration": "none",
        "cursor": "pointer",
        "transition": "0.2s ease",
        "states": {
          "default": {
            "color": "#F5F5F5"
          },
          "hover": {
            "color": "#FFE508",
            "textDecoration": "underline"
          },
          "active": {
            "color": "#FFE508"
          },
          "visited": {
            "color": "#B8B8B8"
          }
        }
      }
    },
    "input": {
      "search": {
        "backgroundColor": "rgba(22, 22, 22, 0.9)",
        "color": "#F5F5F5",
        "border": "1px solid #646464",
        "padding": "10px 12px",
        "borderRadius": "4px",
        "fontSize": "14px",
        "placeholder": {
          "color": "#767676"
        },
        "states": {
          "focus": {
            "borderColor": "#FFE508",
            "boxShadow": "0 0 0 3px rgba(255, 229, 8, 0.2)",
            "outline": "none"
          }
        }
      }
    },
    "card": {
      "default": {
        "backgroundColor": "#3C3C3C",
        "border": "1px solid #646464",
        "borderRadius": "6px",
        "padding": "20px",
        "boxShadow": "0 4px 6px rgba(0, 0, 0, 0.3)",
        "transition": "0.3s ease"
      },
      "highlighted": {
        "backgroundColor": "#FFE508",
        "padding": "30px",
        "color": "#000000"
      },
      "transparent": {
        "backgroundColor": "transparent",
        "border": "1px solid #646464"
      }
    },
    "table": {
      "border": "1px solid #646464",
      "borderCollapse": "collapse",
      "header": {
        "backgroundColor": "#3C3C3C",
        "color": "#F5F5F5",
        "fontWeight": "600",
        "padding": "12px 16px"
      },
      "row": {
        "borderBottom": "1px solid #646464",
        "padding": "12px 16px",
        "height": "40px"
      },
      "cell": {
        "padding": "12px 16px",
        "verticalAlign": "middle"
      },
      "states": {
        "rowHover": {
          "backgroundColor": "#282828"
        }
      }
    },
    "navigation": {
      "sidebarMenu": {
        "backgroundColor": "transparent",
        "border": "1px solid #646464",
        "item": {
          "padding": "12px 16px",
          "height": "40px",
          "color": "#F5F5F5",
          "fontSize": "14px",
          "states": {
            "default": {
              "backgroundColor": "transparent"
            },
            "hover": {
              "backgroundColor": "#3C3C3C"
            },
            "active": {
              "backgroundColor": "#646464",
              "borderLeft": "4px solid #FFE508",
              "fontWeight": "600"
            }
          }
        }
      }
    }
